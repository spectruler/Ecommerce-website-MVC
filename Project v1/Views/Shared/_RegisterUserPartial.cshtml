@model Project_v1.Entities.Account

<div class="register-user-panel">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4 class="panel-title">Register User</h4>
        </div>
        <div class="panel-body">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false)
            <div class="input-group input-group-sm">
                <span class="input-group-addon glyphicon glyphicon-user"></span>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control first-name", @placeholder = "First Name" })
            </div>

            <div class="input-group input-group-sm">
                <span class="input-group-addon glyphicon glyphicon-user"></span>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control last-name", @placeholder = "Last Name" })
            </div>

            <div class="input-group input-group-sm">
                <span class="input-group-addon glyphicon glyphicon-envelope"></span>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control email", @placeholder = "Email",@type="Email" })
            </div>

            <div class="input-group input-group-sm">
                <span class="input-group-addon glyphicon glyphicon-lock"></span>
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control password", @placeholder = "Password", @type="Password" })
            </div>

            <div class="register-checkbox">
                @Html.CheckBoxFor(m=>m.AcceptUserAgreement, new { @data_register_User_aggreement_click=""})
                <span>I Accept the @Html.ActionLink("Terms of use","TermsOfUse","Legal")</span>
            </div>

            <button type="button" class="pull-right btn btn-success disabled">
                Sign up!
            </button>

        </div>
    </div>
</div>