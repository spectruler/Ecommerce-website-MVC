@model Project_v1.Areas.Admin.Models.ItemModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Item</h4>
    <hr />
  <div class="col-md-9 row">
    <hr />
    <h2 class="text-center">@Model.Name</h2>
    <div class="thumbnail">
        <img class="img-responsive" src="@Url.Content(Model.ImageUrl)">
        <div class="caption">
            <strong>Product: @Model.Product</strong>
        </div>
    </div>
    <div class="row">
        <h2>Description: </h2>
        <strong>@Model.Description</strong>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Availability)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Availability)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>

        </dl>
    </div>
</div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.Partial("_BackToListButtonPartial")
        </div>
    }
</div>
